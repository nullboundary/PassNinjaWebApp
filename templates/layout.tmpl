{{define "layout"}}
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="Passbook pass tool service">
    <meta name="author" content="cicada">
    <link rel="shortcut icon" href="/assets/img/favicon_ticket.ico">
    <title>Pass Ninja - Passbook service</title>
    <link rel="stylesheet" href="//cdn.jsdelivr.net/pure/0.5.0/pure-min.css">
    <!--[if lte IE 8]>
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/pure/0.5.0/grids-responsive-old-ie-min.css">
    <![endif]-->
    <!--[if gt IE 8]><!-->
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/pure/0.5.0/grids-responsive-min.css">
    <!--<![endif]-->
    <link href="https://fonts.googleapis.com/css?family=Roboto:300" rel="stylesheet" type="text/css">
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.1.0/css/font-awesome.min.css" rel="stylesheet">
    <!--<link rel="stylesheet" type="text/css" href="https://cdn.rawgit.com/GoogleChrome/dialog-polyfill/master/dialog-polyfill.css">-->
    <link href="/assets/css/global.css" rel="stylesheet">
    <link href="/assets/css/landing.css" rel="stylesheet">
    </head>
    <body>
      <!-- Nav
      ================================================== -->
      <nav class="home-menu pure-menu pure-menu-open pure-menu-horizontal pure-menu-fixed">
        <a href="#" class="pure-menu-heading" id="header">
          <img src="/assets/img/logo.svg" alt="Pass Ninja">
        </a>
        <ul>
          <li><button id="pass-btn">Pass List</button></li>
          <li><button id="login-btn">Login</button></li>
          <li><button id="logout-btn">Logout</button></li>

        </ul>
      </nav>


      {{template "body"}}

      <dialog id="login-modal" class="modal">
        <button class="pure-button close" id="login-close"><i class="fa fa-times"></i></button>
        <h1>Sign in <i id="login-spin" class="fa fa-cog fa-spin"></i></h1>
        <button id="google" class="pure-button signin btn-lg btn-social btn-google-plus">
          <i class="fa fa-google-plus"></i>Sign in with Google
        </button>
        <button id="facebook" class="pure-button signin btn-lg btn-social btn-facebook">
          <i class="fa fa-facebook"></i>Sign in with Facebook
        </button>
        <button id="linkedin" class="pure-button signin btn-lg btn-social btn-linkedin">
          <i class="fa fa-linkedin"></i>Sign in with Linkedin
        </button>
      </dialog>
      <!-- JavaScript
      ================================================== -->
      <script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>
      <script type="text/javascript" src="/assets/js/plugin/dialog-polyfill.js"></script>
      <script type="text/javascript" src="/assets/js/register.js"></script>

    </body>
  </html>
  {{end}}
